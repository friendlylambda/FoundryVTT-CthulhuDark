<form class="{{cssClass}} {{actor.type}} flexcol" autocomplete="off">

  {{!-- Sheet Header --}}
  <header class="cd-sheet-header {{#if isMiniMode}}mini-mode{{/if}}">
    <button type="button" class="toggle-mini-mode">
      <i class="fa-solid fa-dice"></i>
    </button>
    {{#if isMiniMode}}
      <div class="mini-actor-header">
        <img class="profile-img profile-img-mini" src="{{actor.img}}" title="{{actor.name}}" />
        <div class="mini-actor-header-title">
          <div class="actor-name">{{actor.name}}</div>
          <div class="actor-occupation">{{system.occupation}}</div>
        </div>
      </div>
    {{else}}
      <input class="charname" name="name" type="text" value="{{actor.name}}" placeholder="{{localize "CTHULHUDARK.ActorName"}}"/>
      <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" />
      <input class="header-fields" name="system.occupation" type="text" value="{{system.occupation}}" placeholder="{{localize "CTHULHUDARK.OccupationName"}}"/>
    {{/if}}

    <div class="insight">
      <b class="rollable" data-roll-type="clear-insight" style="color: {{system.insight.color}}">{{localize "CTHULHUDARK.Insight"}}</b>
      {{#each system.insight.states as |state count|}}
        <input class="rollable" type="checkbox" data-pos="{{count}}" data-roll-type="toggle-insight" {{#if state}}checked{{/if}} >
      {{/each}}
    </div>

    {{#if isMiniMode}}
      <div class="grid grid-4col mini-rollables-grid">
        <button type="button" class="rollable mini-rollable" data-roll-type="investigate">
          <i class="fa-solid fa-magnifying-glass"></i>
        </button>
        <button type="button" class="rollable mini-rollable" data-roll-type="doSomethingElse">
          <i class="fa-solid fa-dice"></i>
        </button>
        <button type="button" class="rollable mini-rollable" data-roll-type="insight">
          <i class="fa-solid fa-eye insight-die"></i>
        </button>
        <button type="button" class="rollable mini-rollable" data-roll-type="failure">
          <i class="fa-solid fa-circle-exclamation"></i>
        </button>
      </div>
    {{else}}
      <div class="grid grid-2col">
        <button type="button" class="rollable" data-roll-type="investigate">
          <i class="fa-solid fa-dice"></i> {{localize "CTHULHUDARK.InvestigateBtn"}}
        </button>
        <button type="button" class="rollable" data-roll-type="doSomethingElse">
          <i class="fa-solid fa-dice"></i> {{localize "CTHULHUDARK.OtherActionsBtn"}}
        </button>
        <button type="button" class="rollable" data-roll-type="insight">
          <i class="fa-solid fa-dice insight-die"></i> <b style="color: {{system.insight.color}}">{{localize "CTHULHUDARK.InsightRollBtn"}}</b>
        </button>
        <button type="button" class="rollable" data-roll-type="failure">
          <i class="fa-solid fa-dice"></i> {{localize "CTHULHUDARK.FailureRollBtn"}}
        </button>
      </div>
    {{/if}}
  </header>

  {{#unless isMiniMode}}
    {{!-- Sheet Tab Navigation --}}
    <nav class="sheet-tabs tabs" data-group="primary">
      {{!-- Default tab is specified in actor-sheet.mjs --}}
      <a class="item" data-tab="rules">{{localize "CTHULHUDARK.RulesTab"}}</a>
      <a class="item" data-tab="notes">{{localize "CTHULHUDARK.NotesTab"}}</a>
    </nav>

    {{!-- Sheet Body --}}
    <section class="sheet-body">

      {{!-- Rules Tab --}}
      <div class="tab rules" data-group="primary" data-tab="rules">
        <p><b>{{localize "CTHULHUDARK.FailureRuleTitle"}} </b>{{localize "CTHULHUDARK.FailureRuleText"}}</p>
        <p><b>{{localize "CTHULHUDARK.TryingAgainRuleTitle"}} </b>{{localize "CTHULHUDARK.TryingAgainRuleText"}}</p>
        <p><b>{{localize "CTHULHUDARK.CooperateRuleTitle"}} </b>{{localize "CTHULHUDARK.CooperateRuleText"}}</p>
        <p><b>{{localize "CTHULHUDARK.CompeteRuleTitle"}} </b>{{localize "CTHULHUDARK.CompeteRuleText"}}</p>
      </div>

      {{!-- Notes Tab --}}
      <div class="tab notes" data-group="primary" data-tab="notes">
        {{editor system.notes target="system.notes" rollData=rollData button=true owner=owner editable=editable}}
      </div>

    </section>
  {{/unless}}

  {{!-- Sheet Footer --}}

</form>
